FROM ubuntu:latest
RUN apt-get update && apt-get install -y openssh-client sshpass
RUN mkdir /root/.ssh && ssh-keygen -t rsa -b 2048 -f /root/.ssh/id_rsa -N ""
RUN ssh-keyscan -H 52.47.200.235 >> ~/.ssh/known_hosts
RUN mkdir /script
COPY csvpuller.sh /script/csvpuller.sh
RUN chmod +x /script/csvpuller.sh
ENTRYPOINT ["/script/csvpuller.sh"]